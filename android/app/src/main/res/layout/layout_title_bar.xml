<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_bar_height"
    android:background="#ffffff"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dimen_padding"
    android:paddingEnd="@dimen/dimen_padding">


    <!--  左边标题 -->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginStart="-5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@mipmap/icon_back" />

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="5dp"
            android:src="@mipmap/icon_close_black" />

        <TextView
            android:id="@+id/tv_left_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:textSize="@dimen/txt_left_size"
            android:visibility="gone"
            tools:text="左边标题"
            tools:visibility="visible" />


    </LinearLayout>

    <!-- 中间标题 -->
    <TextView
        android:id="@+id/tv_center_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#1B1C33"
        android:textSize="@dimen/txt_center_size"
        tools:text="主标题" />

    <!-- 右边标题栏 -->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_right_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:textColor="#666666"
            android:textSize="@dimen/txt_right_size"
            android:visibility="gone"
            tools:text="右边标题"
            tools:visibility="visible" />
    </LinearLayout>

</LinearLayout>
